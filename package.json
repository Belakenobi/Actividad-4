{
  "name": "productos-app",
  "version": "1.0.0",
  "description": "Aplicación de gestión de productos con autenticación JWT",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": ["nodejs", "express", "mongodb", "jwt", "crud"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "silent": true,
    "verbose": false,
    "forceExit": true,
    "maxWorkers": 1
  }
}
